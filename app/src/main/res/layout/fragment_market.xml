<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize"
    android:paddingHorizontal="20dp"
    tools:context=".ui.market.MarketFragment">

    <LinearLayout
        android:id="@+id/myMarketLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이벤트"
            android:textColor="#6D3805"
            android:textSize="18sp"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:id="@+id/event_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/event_ll_layout"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/eventImage1"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/event" />

                <ImageView
                    android:id="@+id/eventImage2"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/event" />

                <ImageView
                    android:id="@+id/eventImage3"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/event" />

            </LinearLayout>
        </HorizontalScrollView>


        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#E8E8E8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="단골집"
            android:textColor="#6D3805"
            android:textSize="18sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/myMarketList"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginVertical="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#E8E8E8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="오늘의 HOT 시장"
            android:textColor="#6D3805"
            android:textSize="18sp"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:id="@+id/hot_layout"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/hot_ll_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/hotImage1"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/hot" />

                <ImageView
                    android:id="@+id/hotImage2"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/hot" />

                <ImageView
                    android:id="@+id/hotImage3"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/hot" />

            </LinearLayout>
        </HorizontalScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginHorizontal="10dp"
            android:background="#E8E8E8" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>