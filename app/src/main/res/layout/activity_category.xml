<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.price.CategoryActivity">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="3"
        android:columnCount="3">

        <ImageButton
            android:id="@+id/category_squid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#ffffff"
            android:src="@drawable/ic_category_squid"
            android:layout_gravity="center"/>

        <ImageButton
            android:id="@+id/category_pumpkin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#ffffff"
            android:src="@drawable/ic_category_pumpkin"
            android:layout_gravity="center"/>

        <ImageButton
            android:id="@+id/category_pork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#ffffff"
            android:src="@drawable/ic_category_pork"
            android:layout_gravity="center"/>

        <ImageButton
            android:id="@+id/category_apple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#ffffff"
            android:src="@drawable/ic_category_apple"
            android:layout_gravity="center"/>

        <ImageButton
            android:id="@+id/category_onion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#ffffff"
            android:src="@drawable/ic_category_onion"
            android:layout_gravity="center"/>

        <ImageButton
            android:id="@+id/category_cabbage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#ffffff"
            android:src="@drawable/ic_category_cabbage"
            android:layout_gravity="center"/>

        <ImageButton
            android:id="@+id/category_egg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#ffffff"
            android:src="@drawable/ic_category_egg"
            android:layout_gravity="center"/>

        <ImageButton
            android:id="@+id/category_sweet_potato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#ffffff"
            android:src="@drawable/ic_category_sweet_potato"
            android:layout_gravity="center"/>

        <ImageButton
            android:id="@+id/category_chicken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#ffffff"
            android:src="@drawable/ic_category_chicken"
            android:layout_gravity="center"/>

    </GridLayout>



</LinearLayout>