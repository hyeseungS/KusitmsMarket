<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="품목명"/>

        <TextView
            android:id="@+id/item_sub_category_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="생삼겹"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="판매 규격"/>

        <TextView
            android:id="@+id/item_sub_category_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="600g"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시세 (원)"/>

        <TextView
            android:id="@+id/item_sub_category_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23,900"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원산지"/>

        <TextView
            android:id="@+id/item_sub_category_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="국내산"/>

    </LinearLayout>


</LinearLayout>